<h1 class="text-2xl font-bold mb-4">Manage Categories</h1>
<%= link_to 'New Category', new_admin_category_path, class: 'bg-blue-500 text-white px-4 py-2 rounded' %>
<ul class="mt-4 space-y-2">
  <% @categories.each do |category| %>
    <li class="flex justify-between items-center border p-2">
      <span><%= category.name %></span>
      <div>
        <%= link_to 'Edit', edit_admin_category_path(category), class: 'text-blue-500 px-2' %>
        <%= link_to 'Delete', admin_category_path(category), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-500 px-2' %>
        <%= link_to 'Manage Questions', admin_category_questions_path(category), class: 'text-green-500 px-2' %>
      </div>
    </li>
  <% end %>
</ul>
