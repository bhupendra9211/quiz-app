<nav class="bg-indigo-600 p-4">
  <div class="container mx-auto flex justify-between items-center text-white">
    <!-- Logo or App Name -->
    <%= link_to "Quiz App", root_path, class: "text-2xl font-semibold" %>

    <!-- Navigation Links -->
    <div class="space-x-4">
      <% if user_signed_in? %>
        <span class="font-medium"><%= current_user.email.split('@').first %></span>
        <%= link_to "Sign Out", destroy_user_session_path, data: { turbo_confirm: 'Are you sure?', "turbo-method": :delete } , class: "hover:text-indigo-200" %>
        
      <% else %>
        <%= link_to "Sign In", new_user_session_path, class: "hover:text-indigo-200" %>
        <%= link_to "Sign Up", new_user_registration_path, class: "hover:text-indigo-200" %>
      <% end %>
    </div>
  </div>
</nav>
