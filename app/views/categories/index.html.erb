<!-- app/views/categories/index.html.erb -->
<div class="py-16 bg-gray-50">
  <div class="container mx-auto text-center">
    <h2 class="text-4xl font-semibold mb-8">Explore Categories</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      <% @categories.each do |category| %>
        <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition-all cursor-pointer">
          <%= link_to category.name, category_path(category), class: "text-xl font-semibold text-indigo-600 hover:text-indigo-800" %>
          <p class="mt-2 text-gray-600">Discover questions related to <%= category.name %> and boost your skills.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
