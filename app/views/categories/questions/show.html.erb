<h1 class="text-2xl font-bold mb-4"><%= @question.content %></h1>

<h3 class="font-medium">Options</h3>
<ul>
  <% @question.options.each_with_index do |option, index| %>
    <li>
      <%= index + 1 %>. <%= option.content %>
    </li>
  <% end %>
</ul>

<%= link_to 'Back to Category', category_path(@category), class: 'text-blue-500 hover:underline' %>
