<h1 class="text-2xl font-bold mb-4">Questions for <%= @category.name %></h1>
<ul class="space-y-4">
  <% @questions.each do |question| %>
    <li class="border p-4 rounded">
      <%= link_to question.content, category_question_path(@category, question), class: 'text-blue-500 font-medium hover:underline' %>
    </li>
  <% end %>
</ul>
